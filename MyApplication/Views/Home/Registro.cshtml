@model Dominio.Usuario
<link rel="stylesheet" href="~/css/reglog.css"/>
@{
    ViewData["Title"] = "Registrarse";
}

<div class="container-fluid row">
    <div class="col-6 align-content-center">
            <img src="~/LogoProjeckBank.svg" alt="Logo Projeckt Bank"/>
    </div>
    <div class="col-6">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login" style="text-align:end;">Iniciar sesión</a>
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Nombre" placeholder="Nombre"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Contraseña"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Nivel">
                    <option value="X">Seleccione nivel...</option>
                    <option value="Junior">Junior</option>
                    <option value="Semi Senior">Semi Senior</option>
                    <option value="Senior">Senior</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>
        </form>

        <p>@ViewBag.msg</p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


