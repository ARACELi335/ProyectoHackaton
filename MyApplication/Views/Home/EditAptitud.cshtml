@using Dominio
@model Dominio.Usuario

@{
    ViewData["Title"] = "Editar aptitudes";
}

<h1>Editar Aptitudes</h1>

<div class="row contenedor">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aptitudes)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Aptitudes.Count() == 0)
            {
                <p>No hay aptitudes cargadas</p>
            }
            else
            {
                foreach (Aptitud a in Model.Aptitudes)
                {
                    <p>@a.Nombre | @Html.ActionLink("Eliminar", "DeleteAptitud", new { a.Id })</p>
                }
            }
        </dd>
    </dl>
    <div class="col-md-4">
        <form asp-action="EditAptitud">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" readonly hidden />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input for="aptitud" name="aptitud" placeholder="Aptitud" />
            </div>
            <div class="form-group">
                <input type="submit" value="Subir Aptitud" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <p>@ViewBag.msg</p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
