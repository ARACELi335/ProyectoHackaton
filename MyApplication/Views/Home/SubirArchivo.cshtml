@using Dominio
@model Dominio.Proyecto

@{
    ViewData["Title"] = "SubirArchivo";
}

<h1>Subir Archivos</h1>

<h4>Archivo</h4>
<hr />
<div class="row">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Archivos)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Archivos.Count() == 0)
            {
                <p>No hay archivos cargados para este proyecto</p>
            }
            else
            {
                foreach (Archivo a in Model.Archivos)
                {
                    <p>Nombre: @a.Nombre <br />Lenguaje: @a.Lenguaje.Nombre <br />Autor: @a.Autor</p>
                    <p>Contenido del archivo: <br />@a.Contenido</p>
                }
            }
        </dd>
    </dl>
    <div class="col-md-4">
        <form asp-action="SubirArchivo" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="idUsuario" value="@ViewBag.usuario" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="nombre" class="control-label">Nombre</label>
                <input for="nombre" name="nombre" class="form-control" />
            </div>
            <div class=" form-group">
                <label for="archivo" class="control-label">Archivo</label>
                <input for="archivo" type="file" name="archivo" id="archivo">
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>@ViewBag.msg</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
