@model Dominio.Archivo

@{
    ViewData["Title"] = "Archivo";
}

<h1>Detalles de archivo</h1>

<div class="contenedor">
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Nombre:</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            <p>Autor:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            <p>Contenido:</p>
        </dt>
        <dd class = "col-sm-10 contenido">
            @Html.DisplayFor(model => model.Contenido)
        </dd>
    </dl>
</div>
